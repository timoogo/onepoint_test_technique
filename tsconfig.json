{
	"compilerOptions": {
		"types": ["node"],
		"target": "ES6",
		"module": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
